<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    style="@style/ActivityStyles">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_alarm"
        android:id="@+id/TextView_Alarm"
        style="@style/HeadStyles"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_water"
        android:id="@+id/Button_Water"
        android:layout_below="@id/TextView_Alarm"
        style="@style/ButtonStyles"
        android:onClick="WaterGUI"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Switch_Water"
        android:layout_alignTop="@id/Button_Water"
        android:layout_alignBottom="@id/Button_Water"
        android:layout_toRightOf="@id/Button_Water"
        style="@style/SwitchStyles"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_meal"
        android:id="@+id/Button_Meal"
        android:layout_below="@id/Button_Water"
        style="@style/ButtonStyles"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Switch_Meal"
        android:layout_alignTop="@id/Button_Meal"
        android:layout_alignBottom="@id/Button_Meal"
        android:layout_toRightOf="@id/Button_Meal"
        style="@style/SwitchStyles"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEST SERWISU"
        android:id="@+id/TestServisu"
        android:layout_below="@id/Button_Meal"
        android:onClick="TestSerwisu" />

</RelativeLayout>
